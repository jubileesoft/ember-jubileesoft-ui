{{#if @open}}
  {{#modal-dialog
    onClose=(action (mut @open) false)
    onClickOverlay=(action "doNothing")
    translucentOverlay=true
    overlayPosition="parent"
    overlayClass=(local-class "overlay")
    containerClass=(local-class (concat "container" (if this.isMax " maxContainer")))
  }}
    <div local-class="yieldArea">
      {{yield}}
    </div>
  {{/modal-dialog}}
{{/if}}